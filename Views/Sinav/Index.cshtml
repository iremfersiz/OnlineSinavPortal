@model List<OnlineSinavPortal.ViewModels.SinavViewModel>
@{
    ViewData["Title"] = "Sınav Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 style="color: #333; font-weight: 700;">Sınav Yönetimi</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Yeni Sınav Ekle</a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Sınavlar</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Süre (Dakika)</th>
                            <th>Toplam Puan</th>
                            <th>Geçme Notu</th>
                            <th>Soru Sayısı</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sinav in Model)
                        {
                            <tr>
                                <td><strong>@sinav.Baslik</strong></td>
                                <td>@(sinav.Aciklama?.Length > 50 ? sinav.Aciklama.Substring(0, 50) + "..." : sinav.Aciklama ?? "-")</td>
                                <td>@sinav.Sure</td>
                                <td>@sinav.ToplamPuan</td>
                                <td>@sinav.GecmeNotu</td>
                                <td>@sinav.SoruSayisi</td>
                                <td>
                                    @if (sinav.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@sinav.Id" class="btn btn-sm btn-info">Detay</a>
                                        <a asp-action="Edit" asp-route-id="@sinav.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                        <a asp-controller="Soru" asp-action="Index" asp-route-sinavId="@sinav.Id" class="btn btn-sm btn-primary">Sorular</a>
                                        <a asp-action="Delete" asp-route-id="@sinav.Id" class="btn btn-sm btn-danger">Sil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">Henüz sınav bulunmamaktadır.</p>
            <a asp-action="Create" class="btn btn-primary">İlk Sınavı Oluştur</a>
        }
    </div>
</div>






