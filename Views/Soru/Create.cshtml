@model OnlineSinavPortal.ViewModels.SoruViewModel
@{
    ViewData["Title"] = "Yeni Soru Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header">
                <h4>Yeni Soru Oluştur</h4>
                <p class="text-muted mb-0">@Model.SinavBaslik</p>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="SinavId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label asp-for="SoruMetni" class="form-label"></label>
                            <textarea asp-for="SoruMetni" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="SoruMetni" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Puan" class="form-label"></label>
                            <input asp-for="Puan" class="form-control" type="number" />
                            <span asp-validation-for="Puan" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Sira" class="form-label"></label>
                            <input asp-for="Sira" class="form-control" type="number" />
                            <span asp-validation-for="Sira" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="mb-3">Seçenekler</h5>
                    <div id="secenekler">
                        @for (int i = 0; i < Model.Secenekler.Count; i++)
                        {
                            <div class="row mb-3 secenek-item">
                                <div class="col-md-10">
                                    <input type="hidden" asp-for="Secenekler[i].Sira" value="@(i + 1)" />
                                    <input type="text" asp-for="Secenekler[i].SecenekMetni" class="form-control" placeholder="Seçenek @(i + 1)" />
                                    <span asp-validation-for="Secenekler[i].SecenekMetni" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-check mt-2">
                                        <input asp-for="Secenekler[i].DogruCevap" class="form-check-input" type="checkbox" />
                                        <label asp-for="Secenekler[i].DogruCevap" class="form-check-label">Doğru Cevap</label>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" asp-route-sinavId="@Model.SinavId" class="btn btn-secondary">İptal</a>
                        <button type="submit" class="btn btn-primary">Oluştur</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






